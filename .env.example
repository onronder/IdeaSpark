# Application
NODE_ENV=development
PORT=3000

# API URLs
API_URL=http://localhost:3000
EXPO_PUBLIC_API_URL=http://localhost:3000

# Database (Supabase in production, local Postgres in development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ideaspark_dev
# For production with Supabase:
# DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:5432/[DATABASE]?pgbouncer=true

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=512
OPENAI_TEMPERATURE=0.4

# In-App Purchases (Apple)
APPLE_SHARED_SECRET=your-apple-shared-secret-from-app-store-connect
APPLE_ENVIRONMENT=sandbox

# In-App Purchases (Google Play)
GOOGLE_SERVICE_ACCOUNT_KEY=path-to-google-service-account-key.json
GOOGLE_PACKAGE_NAME=com.ideaspark.app

# Supabase (for production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Sentry (Error Tracking)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=your-sentry-auth-token
EXPO_PUBLIC_SENTRY_DEBUG=false
EXPO_PUBLIC_APP_VERSION=1.0.0

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Analytics (Amplitude or Segment)
AMPLITUDE_API_KEY=your-amplitude-api-key
# OR
SEGMENT_WRITE_KEY=your-segment-write-key

# Email Service (SendGrid or AWS SES)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@ideaspark.app
EMAIL_FROM_NAME=IdeaSpark

# AWS (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ideaspark-uploads

# Application Limits
FREE_TIER_IDEA_LIMIT=1
FREE_TIER_MESSAGE_LIMIT=2
PRO_TIER_IDEA_LIMIT=999999
PRO_TIER_MESSAGE_LIMIT=999999
DAILY_AI_COST_LIMIT=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:8081,http://localhost:19000,http://localhost:19001,exp://localhost:8081

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ideaspark_test